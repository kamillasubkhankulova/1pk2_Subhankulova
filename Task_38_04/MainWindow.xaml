<Window x:Class="Task_38_04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_38_04"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <UniformGrid Columns="2" Margin="10">
        <Grid Background="#d6e6f2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <!-- подписи полей для ввода -->
            <Label Content="Регистрация"
                   Foreground="#303C54"
                   FontWeight="ExtraBlack"
                   FontSize="13.5"
                   Grid.Row="1" 
                   Grid.Column="0"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center"/>
            <Label Content="Фамилия"
                Foreground="#303C54"
                FontWeight="ExtraBlack"
                Grid.Row="2" 
                Grid.Column="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"/>

            <Label Content="Имя"
                Foreground="#303C54"
                FontWeight="ExtraBlack"
                Grid.Row="3" 
                Grid.Column="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"/>

            <Label Content="Отчество"
                Foreground="#303C54"
                FontWeight="ExtraBlack"
                Grid.Row="4" 
                Grid.Column="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"/>

            <Label Content="Группа"
                Foreground="#303C54"
                FontWeight="ExtraBlack"
                Grid.Row="5" 
                Grid.Column="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"/>

            <Label Content="Дата рождения"
                Foreground="#303C54"
                FontWeight="ExtraBlack"
                Grid.Row="6" 
                Grid.Column="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"/>

            <Label Content="Пол"
                   Foreground="#303C54"
                   FontWeight="ExtraBlack"
                   Grid.Row="7" 
                   Grid.Column="0"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center"/>

            <!-- поля для ввода -->
            <TextBox Name="surname"
                Grid.Row="2" 
                Grid.Column="1" 
                Margin="5"/>

            <TextBox Name="name"
                Grid.Row="3" 
                Grid.Column="1" 
                Margin="5"/>

            <TextBox Name="patronymic"
                Grid.Row="4" 
                Grid.Column="1"
                Margin="5"/>
            <TextBox Name="group"
                Grid.Row="5"
                Grid.Column="1"
                Margin="5"/>

            <!-- поле для ввода даты -->
            <DatePicker Name="birthDatePicker"
                Grid.Row="6" 
                Grid.Column="1"
                Margin="5"
                SelectedDateFormat="Short"/>

            <!-- выпадающий список для выбора пола -->
            <ComboBox Name="genderComboBox"
                Grid.Row="7" 
                Grid.Column="1"
                Margin="5">
                <ComboBoxItem Content="Женский"/>
                <ComboBoxItem Content="Мужской"/>
            </ComboBox>

            <!-- UniformGrid с кнопками -->
            <UniformGrid Columns="2"
                Grid.Row="8" 
                Grid.Column="1">
                <Button Content="Сохранить"
                    Name="addStudentButton"
                    Padding="5"
                    Margin="5,10,5,0"
                    IsDefault="True"
                    Click="addStudentButton_Click"/>

                <Button Content="Очистить"
                    Name="clearStudentButton"
                    Padding="5"
                    Margin="5,10,5,0"
                    IsCancel="True"
                    Click="clearStudentButton_Click"/>
            </UniformGrid>

            <!-- фоновое изображение -->
            <Image Source="/Images/OKEI.png" 
                Grid.Row="9" 
                Grid.Column="0"
                VerticalAlignment="Top"
                MaxHeight="100"
                MaxWidth="100" 
                Opacity="0.4" Grid.RowSpan="3"/>

        </Grid>

        <ListBox x:Name="studentListBox"
                 Background="Azure"
                 MouseDoubleClick="studentListBox_MouseDoubleClick">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить" Name="deleteStudentMenuItem"
                    Click="deleteStudentMenuItem_Click"/>
                    <MenuItem Header="Подробнее" Name="showInfoMenuItem"
                              Click="showInfoMenuItem_Click"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
    </UniformGrid>
</Window>